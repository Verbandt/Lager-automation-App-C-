<Window x:Class="Lager_automation.Views.AddRackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Skapa sektion"
        Height="555"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Scroll area -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Välj delar till din sektion:" Foreground="{DynamicResource TextBrush}" FontSize="18" Margin="0,0,0,10"/>

        <!-- 🔽 The scrollable panel for all part dropdowns -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10" BorderBrush="#444" BorderThickness="1">
            <StackPanel x:Name="PartSelectorPanel" Orientation="Vertical" Margin="0,5,0,5"/>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Avbryt" Width="100" Margin="5" Click="Cancel_Click" Background="Tomato"/>
            <Button Content="Spara" Width="120" Margin="5" Background="#6FA63D" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
