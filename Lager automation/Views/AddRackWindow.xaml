<Window x:Class="Lager_automation.Views.AddRackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Skapa sektion"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Scroll area -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Välj delar till din sektion:" Foreground="White" FontSize="18" Margin="0,0,0,10"/>

        <!-- 🔽 The scrollable panel for all part dropdowns -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#2B2B2B" Padding="10" BorderBrush="#444" BorderThickness="1">
            <StackPanel x:Name="PartSelectorPanel" Orientation="Vertical" Margin="0,5,0,5"/>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Avbryt" Width="100" Margin="5" Click="Cancel_Click"/>
            <Button Content="Spara" Width="120" Margin="5" Background="#2D89EF" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
