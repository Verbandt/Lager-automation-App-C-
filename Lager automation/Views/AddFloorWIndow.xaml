<Window x:Class="Lager_automation.Views.AddFloorWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lager_automation.Views"
        mc:Ignorable="d"
        Title="Skapa golvplats"
        Height="400"
        Width="300"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Scroll area -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock Text="Välj golvplatsens egenskaper" Foreground="{DynamicResource TextBrush}" FontSize="18" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="{DynamicResource BackgroundBrush}" Padding="10"
                      BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <Grid x:Name="FloorSelectorPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Avbryt" Width="100" Margin="5" Click="Cancel_Click" Background="Tomato"/>
            <Button Content="Spara" Width="120" Margin="5" Background="#6FA63D" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
    
</Window>
