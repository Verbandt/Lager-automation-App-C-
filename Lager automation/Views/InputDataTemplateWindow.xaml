<Window x:Class="Lager_automation.Views.InputDataTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lager_automation.Views"
        mc:Ignorable="d"
        Title="InputDataTemplateWindow" Height="900" Width="1680"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Right-align ALL DataGrid cell content -->
        <Style TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>

        <!-- Column header content layout -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.Resources>
            <Style TargetType="DataGrid">
                <Setter Property="Background" Value="{DynamicResource PanelBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                <Setter Property="BorderThickness" Value="1"/>

                <!-- Excel-like rows -->
                <Setter Property="RowBackground" Value="{DynamicResource BackgroundBrush}" />
                <Setter Property="AlternatingRowBackground" Value="{DynamicResource DatagridAltBg}" />
                <Setter Property="AlternationCount" Value="2"/>

                <!-- Grid lines -->
                <Setter Property="GridLinesVisibility" Value="All"/>
                <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource CellGridLineBrush}"/>
                <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource CellGridLineBrush}"/>

                <!-- Behavior -->
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="SelectionMode" Value="Extended"/>
            </Style>

            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Padding" Value="6,4"/>
            </Style>

            <Style TargetType="DataGridRow">
                <Setter Property="Foreground" Value="{DynamicResource DatagridCells}"/>
            </Style>


        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button x:Name="UseTable" Content="Använd tabell" FontSize="16" Padding="5" Margin="0,0,10,0" Background="Green" Foreground="White" Click="UseTable_Click"/>
            <Button x:Name="Reset" Content="Återställ tabell" FontSize="16" Padding="5" Margin="0,0,10,0" Background="#FFB21A" Foreground="White" Click="Reset_Click"/>
            <Button x:Name="ExportExcel" Content="Exportera till Excel" FontSize="16" Padding="5" Background="#2D89EF" Foreground="White" Click="ExportExcel_Click"/>
            <Button x:Name="Close" Content="Stäng ner" FontSize="16" Padding="5" Margin="50,0,0,0" Background="Red" Foreground="White" Click="Close_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="TemplateDataGrid" AutoGenerateColumns="False" Margin="10" CanUserSortColumns="True" FontSize="12" Background="{DynamicResource BackgroundBrush}" IsReadOnly="False" />

    </Grid>
</Window>
